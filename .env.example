# Environment Configuration
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wakala
DB_USER=wakala_user
DB_PASSWORD=your_secure_password_here

# Redis Configuration
REDIS_URL=redis://:your_redis_password@localhost:6379
REDIS_PASSWORD=your_redis_password

# RabbitMQ Configuration
RABBITMQ_URL=amqp://wakala_user:your_rabbitmq_password@localhost:5672
RABBITMQ_PASSWORD=your_rabbitmq_password

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ROOT_USER=wakala_minio
MINIO_ROOT_PASSWORD=your_minio_password
MINIO_USE_SSL=false

# WhatsApp Business API Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_BUSINESS_ID=your_business_id
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret
JWT_REFRESH_EXPIRY=30d

# API Configuration
API_PORT=3001
API_PREFIX=/api/v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Multi-tenant Configuration
ENABLE_MULTI_TENANCY=true
DEFAULT_TENANT_ID=default
TENANT_ISOLATION_LEVEL=schema

# Payment Gateway Configuration
PAYMENT_GATEWAY_PROVIDER=stripe
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Email Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@wakala.com

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/wakala.log

# Security Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_SECRET=your_session_secret
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GEOCODING_PROVIDER=google

# Testing Configuration
TEST_DB_NAME=wakala_test
TEST_REDIS_DB=1